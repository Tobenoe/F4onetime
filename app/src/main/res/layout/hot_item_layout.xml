<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:placeholderImage="@drawable/user_no_image"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/hot_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hot_item_img"
            android:text="name" />


        <TextView
            android:id="@+id/hot_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hot_item_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/hot_item_img"
            android:text="time" />


        <ImageView
            android:id="@+id/hot_item_amin_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jia" />
        <ImageView
            android:id="@+id/hot_item_amin_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jubao" />
        <ImageView
            android:id="@+id/hot_item_amin_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/lianjie" />
        <ImageView
            android:id="@+id/hot_item_amin_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pinbi" />

        <ImageView
            android:id="@+id/hot_item_amin_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@mipmap/jian" />

    </RelativeLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/mvPlayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/hot_item_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hot_item_plr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="pinglunren" />

        <TextView
            android:id="@+id/hot_item_plcotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="pingluncotext" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
