<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:placeholderImage="@drawable/user_no_image"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />

        <TextView
            android:layout_toRightOf="@+id/hot_item_img"
            android:id="@+id/hot_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />


        <TextView
            android:id="@+id/hot_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hot_item_name"
            android:layout_toRightOf="@+id/hot_item_img"
            android:layout_marginTop="8dp"
            android:text="time" />


        <ImageView
            android:id="@+id/hot_item_amin_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/hot_item_time"
            android:src="@drawable/user_no_image" />

    </RelativeLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/mvPlayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/hot_item_time" />


</LinearLayout>
